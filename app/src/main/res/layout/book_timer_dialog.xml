<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/book_timer_ago_time_textview"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독서를 종료 하시겠습니까?"
        android:textColor="@color/white"
        android:textSize="18dp"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="읽은 시간 - "
        android:textColor="@color/white"
        android:textSize="18dp"
        />


    <TextView
        android:id="@+id/book_timer_time_textview"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textColor="@color/white"
        android:textSize="18dp"
        />

</LinearLayout>


    <Button
        android:id="@+id/book_timer_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/white_box_button"
        android:onClick="clickDialogBtn"
        android:text="네"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/book_timer_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/white_box_button"
        android:onClick="clickDialogBtn"
        android:text="아니오"
        android:textColor="@color/black"
        android:textSize="18dp" />


</LinearLayout>