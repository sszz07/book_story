<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="프로필 이미지 설정"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/setting_image_camera_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:text="카 메 라"
            android:textSize="18dp" />

        <Button
            android:id="@+id/setting_image_gallery_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:onClick="clickDialogBtn"
            android:text="갤 러 리"
            android:textSize="18dp" />

        <Button
            android:id="@+id/setting_image_x_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:onClick="clickDialogBtn"
            android:text="기본 이미지"
            android:textSize="18dp" />

        <Button
            android:id="@+id/setting_image_cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:onClick="clickDialogBtn"
            android:text="취 소"
            android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>